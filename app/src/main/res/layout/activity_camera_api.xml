<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".auth.CameraAPIActivity"
        android:background="@color/blackGray"
        android:id="@+id/mainConstraintLayout">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_face_white_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:id="@+id/imageView15"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="สแกนใบหน้า"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/prompt_bold"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView15"
            android:layout_marginTop="28dp" android:id="@+id/textView9"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="    กรุณาถ่ายใบหน้าของท่านเพื่อนำข้อมูล \n   ไปใช้ในการประมวลผลของโปรแกรมหาก \n  ไม่สแกนระบบจะไม่สามารถทำรายต่อไปได้"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/prompt_medium"
            android:textStyle="normal"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="16dp"/>

    <Button
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle4"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="80dp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:fontFamily="@font/prompt_bold"
            android:textSize="16dp"
            android:text="เริ่มต้นสแกนใบหน้า"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>