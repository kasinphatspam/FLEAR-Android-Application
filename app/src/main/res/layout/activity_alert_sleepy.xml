<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <ImageButton
            android:id="@+id/cancelImageButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_close_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="240dp"
            android:layout_height="240dp"
            style="@style/AVLoadingIndicatorView"
            android:visibility="visible"
            app:indicatorName="BallScaleMultipleIndicator"
            app:indicatorColor="@color/pink"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/avi"
            app:layout_constraintStart_toStartOf="@+id/avi"
            app:layout_constraintTop_toTopOf="@+id/avi"
            app:layout_constraintBottom_toBottomOf="@+id/avi"
            android:id="@+id/circleImageView3"/>

    <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_sentiment_very_dissatisfied_black_24dp"
            app:layout_constraintEnd_toEndOf="@+id/circleImageView3"
            app:layout_constraintStart_toStartOf="@+id/circleImageView3"
            app:layout_constraintTop_toTopOf="@+id/circleImageView3"
            app:layout_constraintBottom_toBottomOf="@+id/circleImageView3"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="อันตราย!!"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="normal"
            android:fontFamily="@font/prompt_bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/avi"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView4"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="คุณมีโอกาสเกิดอาการหลับใน"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="normal"
            android:fontFamily="@font/prompt_medium"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:id="@+id/textView8"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ต้องการไปยังจุดพักรถหรือไม่ ?"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="normal"
            android:fontFamily="@font/prompt_medium"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:id="@+id/textView13"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="ตกลง"
            android:background="@drawable/buttonstyle"
            android:fontFamily="@font/prompt_bold"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/confirmButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>